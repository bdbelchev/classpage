@{
    ViewData["Title"] = "Teacher Directory";
}

@model List<TeacherDTO>

<h1>Teacher Directory</h1>
<br />

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Subjects</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TeacherDTO t in Model)
        {
            <tr>
                <td>@t.FirstName</td>
                <td>@t.MiddleName</td>
                <td>@t.LastName</td>
                <td>@string.Join(", ", (ViewBag.SubjectList as ICollection<Subject>).Where(s => t.SubjectIds.Contains(s.Id)).Select(s => s.SubjectName))</td>
                <td>
                    @Html.ActionLink("Go", "TeacherDetails", "Directory", new { id = t.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>