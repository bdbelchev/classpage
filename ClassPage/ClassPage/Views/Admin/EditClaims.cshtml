@{
    ViewData["Title"] = "Edit User Claims";
}

@model Microsoft.AspNetCore.Identity.IdentityUser

<form asp-action="EditClaims" asp-controller="Admin" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <input type="text" disabled value="@Model.Id" />
    </div>
    <div class="form-group">
        <input type="text" disabled value="@Model.Email" />
    </div>
    <div class="form-group">
        <div class="form-control">
            <input type="radio" name="role" value="Student" />
            <label>Student</label>
        </div>
        <div class="form-control">
            <input type="radio" name="role" value="Teacher" />
            <label>Teacher</label>
        </div>
        <div class="form-control">
            <input type="radio" name="role" value="Admin" />
            <label>Admin</label>
        </div>
    </div>
    <input type="submit" value="Go" class="btn btn-primary" />
</form>
@Html.ActionLink("Unlink from Entity", "UnlinkEntity", "Admin", new { id = Model.Id }, new { @class = "btn btn-danger" })