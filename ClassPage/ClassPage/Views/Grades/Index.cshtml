@{
    ViewData["Title"] = "Grades";
}

<h1>Lookup grades:</h1>

@using (Html.BeginForm("List", "Grades", FormMethod.Get))
{
    <div class="form-group">
        <select id="classId" class="form-control">
            <option disabled="disabled" selected="selected">Select class</option>
            @foreach (Class c in ViewBag.ClassList)
            {
                <option value="@c.Id">@c.ClassName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <select id="studentId" name="studentId" class="form-control">
            <option disabled="disabled" selected="selected">Select student</option>
        </select>
    </div>
    <input type="submit" value="Go" class="btn btn-primary" />
}
<br />
<h1>Add grade:</h1>
@using (Html.BeginForm("Add", "Grades", FormMethod.Get))
{
    <div class="form-group">
        <label>You are: (will be implemented using accounts later)</label>
        <select name="teacherId" class="form-control">
            <option disabled="disabled" selected="selected">Select teacher</option>
            @foreach (Teacher t in ViewBag.TeacherList)
            {
                <option value="@t.Id">@t.FirstName @t.LastName</option>
            }
        </select>
    </div>
    <input type="submit" value="Go" class="btn btn-primary" />
}

<script type="text/javascript">
    $(document).ready(function() {
        $("#classId").on("change",
            function() {
                $("#studentId").empty();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetStudentsDropdown")',

                    dataType: 'json',

                    data: { classId: $("#classId").val() },

                    success: function (data) {
                        $.each(data.students,
                            function(i, st) {
                                $("#studentId").append('<option value="'+ st.value + '">' + st.text + '</option>');
                            });
                    }
                });
                return false;
            });
    });
</script>